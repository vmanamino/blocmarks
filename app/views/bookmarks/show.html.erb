<h1><%= link_to @topic.title, @topic %></h1>
<p><%= link_to @bookmark.url, "#{@bookmark.url}" %></p>
 <% if policy(@bookmark).edit? %>
    <div class="col-md-8"><%= link_to "Edit Bookmark", edit_topic_bookmark_path(@topic, @bookmark), class: 'btn btn-success' %></div>
<% end %>
<br/>
<% if policy(@bookmark).destroy? %>
    <div class="col-md-8"><%= link_to "Delete Bookmark", [@topic, @bookmark], method: :delete, class: 'btn btn-danger' %></div>
<% end %>
